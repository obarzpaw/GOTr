<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.example.gotr">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
            android:allowBackup="true"
            android:icon="@mipmap/gotr_icon"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/gotr_icon"
            android:supportsRtl="true"
            android:theme="@style/Base.Theme.AppCompat.Light.DarkActionBar">
        <service
                android:name=".data.source.remote.GotAPIService"
                android:enabled="true"
                android:exported="true">
        </service>

        <activity android:name=".GridOfCharacters">
        </activity>
        <activity
                android:name=".CharacterActivity"
                android:parentActivityName=".GridOfCharacters">
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value=".GridOfCharacters"/>
        </activity>
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
    </application>

</manifest>